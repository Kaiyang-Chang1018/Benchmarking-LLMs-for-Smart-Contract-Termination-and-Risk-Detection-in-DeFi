        if (lpCreationBlock != 0 && (from != address(0) && to != address(0))) {
            uint32 timeElapsedSince = uint32(block.timestamp - FlareMinting(minting).startTimestamp());
            uint256 currentCycle = (timeElapsedSince / GAP_BETWEEN_CYCLE) + 1;
