    function sendMessage(
        uint32 _dstEid,
        string memory _message,
        uint256 _amount,
        bytes calldata _options
    ) public payable checkActivation {
        require(
            token.balanceOf(msg.sender) >= _amount,
            "Insufficient token balance"
        );
        // Burn tokens on the source chain and transfer fee receiver amount
        uint256 receiverAmount = distributeTokens(msg.sender, _amount);

        bytes memory payload = abi.encode(msg.sender, receiverAmount, _message);
        // OApp standard function to transfer cross chain
        _lzSend(
            _dstEid,
            payload,
            _options,
            MessagingFee(msg.value, 0),
            payable(msg.sender)
