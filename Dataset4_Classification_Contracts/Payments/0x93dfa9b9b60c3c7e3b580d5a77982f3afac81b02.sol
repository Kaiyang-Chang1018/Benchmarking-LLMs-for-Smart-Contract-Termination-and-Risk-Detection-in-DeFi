    function estimateFees(
        uint32 _dstEid,
        string memory _message,
        uint256 _amount,
        bytes calldata _options
    ) public view returns (uint256 totalFee) {
        bytes memory payload = abi.encode(msg.sender, _amount, _message);
        MessagingFee memory messagingFee = _quote(
            _dstEid,
            payload,
            _options,
            false
        );
        totalFee = uint256(messagingFee.nativeFee);

        return (totalFee);
    }

    /**
     * sends a message to LayerZero
     * @param _dstEid the destination Id of the network to send to
     * @param _message the ooptional message string to send with the transaction
     * @param _amount the amount of tokens to transfer
     * @param _options the options for executing the receive function on the other chain.
