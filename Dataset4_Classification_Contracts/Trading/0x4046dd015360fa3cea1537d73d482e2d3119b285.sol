import "@openzeppelin/contracts/access/Ownable2Step.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

contract ElementLiquidityManagerV2 is Ownable2Step {
    using SafeERC20 for IERC20;

    address constant UNISWAP_V2_FACTORY = 0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f;
    address constant UNISWAP_V2_ROUTER = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    address public immutable E280;
    mapping(address => bool) public allowedTokens;

    error ZeroAmount();
    error ZeroAddress();
    error ZeroReserve();
    error TokenNotAllowed();
    error IncompatibePair();

    constructor(address[] memory tokens, address owner, address e280) Ownable(owner) {
        if (owner == address(0)) revert ZeroAddress();
        if (e280 == address(0)) revert ZeroAddress();

        E280 = e280;

        for (uint8 i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            if (token == address(0)) revert ZeroAddress();
            allowedTokens[token] = true;
        }
    }

    function addLiquidity(address tokenAddress, uint256 tokenAmount, uint256 deadline) external {
        if (!isAllowed(tokenAddress)) revert TokenNotAllowed();
        if (tokenAmount == 0) revert ZeroAmount();

        address pairAddress = IUniswapV2Factory(UNISWAP_V2_FACTORY).getPair(E280, tokenAddress);
        if (pairAddress == address(0)) revert IncompatibePair();

        IERC20 token = IERC20(tokenAddress);
        IERC20 e280 = IERC20(E280);

        uint256 e280Amount = calculateELMTContribution(pairAddress, tokenAmount, tokenAddress);

        token.safeTransferFrom(msg.sender, address(this), tokenAmount);
        e280.safeTransferFrom(msg.sender, address(this), e280Amount);

        e280.safeIncreaseAllowance(UNISWAP_V2_ROUTER, e280Amount);
        token.safeIncreaseAllowance(UNISWAP_V2_ROUTER, tokenAmount);

        (uint256 usedE280, uint256 usedToken,) = IUniswapV2Router02(UNISWAP_V2_ROUTER).addLiquidity(
            E280, tokenAddress, e280Amount, tokenAmount, 0, 0, msg.sender, deadline
        );

        if (usedE280 < e280Amount) {
            e280.safeTransfer(msg.sender, e280Amount - usedE280);
        }
        if (usedToken < tokenAmount) {
            token.safeTransfer(msg.sender, tokenAmount - usedToken);
        }
    }

    function addLiquiditySupportingFees(address tokenAddress, uint256 tokenAmount, uint256 deadline) external {
        if (!isAllowed(tokenAddress)) revert TokenNotAllowed();
        if (tokenAmount == 0) revert ZeroAmount();

        address pairAddress = IUniswapV2Factory(UNISWAP_V2_FACTORY).getPair(E280, tokenAddress);
        if (pairAddress == address(0)) revert IncompatibePair();

        IERC20 token = IERC20(tokenAddress);
        IERC20 e280 = IERC20(E280);

        token.safeTransferFrom(msg.sender, address(this), tokenAmount);

        uint256 amountToAdd = token.balanceOf(address(this));
        uint256 e280Amount = calculateELMTContribution(pairAddress, amountToAdd, tokenAddress);
        e280.safeTransferFrom(msg.sender, address(this), e280Amount);

        e280.safeIncreaseAllowance(UNISWAP_V2_ROUTER, e280Amount);
        token.safeIncreaseAllowance(UNISWAP_V2_ROUTER, amountToAdd);

        (uint256 usedE280, uint256 usedToken,) = IUniswapV2Router02(UNISWAP_V2_ROUTER).addLiquidity(
            E280, tokenAddress, e280Amount, amountToAdd, 0, 0, msg.sender, deadline
        );

        if (usedE280 < e280Amount) {
            e280.safeTransfer(msg.sender, e280Amount - usedE280);
        }
        if (usedToken < amountToAdd) {
            token.safeTransfer(msg.sender, amountToAdd - usedToken);
        }
    }

    function removeLiqudity(address tokenAddress, uint256 liquidityAmount, uint256 deadline) external {
        if (!isAllowed(tokenAddress)) revert TokenNotAllowed();
        if (liquidityAmount == 0) revert ZeroAmount();

        address pairAddress = IUniswapV2Factory(UNISWAP_V2_FACTORY).getPair(E280, tokenAddress);
        if (pairAddress == address(0)) revert ZeroAddress();
        IERC20 pairToken = IERC20(pairAddress);
        pairToken.safeTransferFrom(msg.sender, address(this), liquidityAmount);
        pairToken.safeIncreaseAllowance(UNISWAP_V2_ROUTER, liquidityAmount);

        (uint256 e280Amount, uint256 tokenAmount) = IUniswapV2Router02(UNISWAP_V2_ROUTER).removeLiquidity(
            E280, tokenAddress, liquidityAmount, 0, 0, address(this), deadline
        );

        IERC20(E280).safeTransfer(msg.sender, e280Amount);
        IERC20(tokenAddress).safeTransfer(msg.sender, tokenAmount);
    }

    function removeLiquditySupportingFees(address tokenAddress, uint256 liquidityAmount, uint256 deadline) external {
        if (!isAllowed(tokenAddress)) revert TokenNotAllowed();
        if (liquidityAmount == 0) revert ZeroAmount();

        address pairAddress = IUniswapV2Factory(UNISWAP_V2_FACTORY).getPair(E280, tokenAddress);
        if (pairAddress == address(0)) revert ZeroAddress();
        IERC20 pairToken = IERC20(pairAddress);
        pairToken.safeTransferFrom(msg.sender, address(this), liquidityAmount);
        pairToken.safeIncreaseAllowance(UNISWAP_V2_ROUTER, liquidityAmount);

        (uint256 e280Amount,) = IUniswapV2Router02(UNISWAP_V2_ROUTER).removeLiquidity(
            E280, tokenAddress, liquidityAmount, 0, 0, address(this), deadline
        );
        uint256 tokenAmountReceived = IERC20(tokenAddress).balanceOf(address(this));
        IERC20(E280).safeTransfer(msg.sender, e280Amount);
        IERC20(tokenAddress).safeTransfer(msg.sender, tokenAmountReceived);
    }

    function calculateELMTContribution(address pairAddress, uint256 amount, address token)
        public
        view
        returns (uint256 e280Amount)
    {
        IUniswapV2Pair pair = IUniswapV2Pair(pairAddress);
        (uint112 reserve0, uint112 reserve1,) = pair.getReserves();

        if (reserve0 == 0 || reserve1 == 0) revert IncompatibePair();

        if (token == pair.token0()) {
            e280Amount = (reserve1 * amount) / reserve0;
        } else {
            e280Amount = (reserve0 * amount) / reserve1;
        }
    }

    function setAllowed(address token, bool allowed) external onlyOwner {
        if (token == address(0)) revert ZeroAddress();
        if (token == E280) revert TokenNotAllowed();
        allowedTokens[token] = allowed;
    }

    function isAllowed(address token) public view returns (bool) {
        return allowedTokens[token];
    }
}