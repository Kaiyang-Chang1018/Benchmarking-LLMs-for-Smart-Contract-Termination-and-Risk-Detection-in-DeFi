     */
    function collect(uint256 _tokenId, uint256 _amount) public payable {
        require(
            _ownerOf(_tokenId) == msg.sender,
            "Red Envelope: You are not the NFT owner"
        );

        Gift storage gift = gifts[_tokenId];

        require(
            block.timestamp >= gift.start,
            "Red Envelope: Rewards still vesting"
        );
        uint256 _vested = available(gift.amount, gift.start, gift.duration);
