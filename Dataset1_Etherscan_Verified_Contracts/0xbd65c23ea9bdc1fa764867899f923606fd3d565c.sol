     */
    function tip(
        uint256 _giftId,
        uint256 _amount,
        string calldata _msg
    ) external {
        require(_giftId < totalGifts, "Red Envelope: Token ID does not exist.");
        Gift storage gift = gifts[_giftId];
        uint256 _fee = (_amount * tipFee) / 100;
        gift.tipped = gift.tipped + (_amount - _fee);
        IERC20(gift.token).safeTransferFrom(
            msg.sender,
            address(this),
            _amount - _fee
        );
        IERC20(gift.token).safeTransferFrom(msg.sender, feeReceiver, _fee);
        emit Tip(_giftId, gift.token, _amount, _msg);
    }

