    // @return The status of the metabolts
    function getMetaboltsMintStatus() external view returns(bool, bool, bool, bool, uint256){
        uint256 totalMinted = IMetabolts(nftAddress).reserveCount()+IMetabolts(nftAddress).privateCount()+IMetabolts(nftAddress).mintIndex();
