    function _mintNft() internal {
        require(mintAddress[msg.sender] < 1, "MetaboltsMint: invalid mint address");
        require(msg.value >= publicPrice, "MetaboltsMint: invalid value");

        mintAddress[msg.sender] += 1;
        IMetabolts(nftAddress).mintMTBT(msg.sender, 1, 0);
    }

