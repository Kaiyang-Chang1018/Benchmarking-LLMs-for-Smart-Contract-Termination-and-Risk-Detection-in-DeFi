        bytes32 message = prefixed(keccak256(abi.encodePacked(msg.sender, MINTWHITELIST_SIGN, chainId, this)));
        require(recoverSigner(message, _sig) == signVerifier, "MetaboltsMint: invalid signature");

        _mintNft();

        emit MintWhitelist(msg.sender, 1);
    }

    // @dev Public Mints NFTs
