pragma solidity 0.8.19;

import { IERC20, SafeERC20 } from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import { EIP712Base } from "../utils/EIP712Base.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import { ECDSA } from "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import { LibMerkleDistributor } from "../libraries/LibMerkleDistributor.sol";
import { LibMerkleProof } from "../libraries/LibMerkleProof.sol";

contract KreatorhoodAirdropDistributor is Ownable, EIP712Base {
    using SafeERC20 for IERC20;

    // Thrown when a phase is already initialized
    error PhaseAlreadyInitialized(uint256 phase);

    // Thrown when a phase is not initialized
    error PhaseNotInitialized(uint256 phase);

    // Thrown when trying to claim from an ended phase
    error PhaseAlreadyEnded(uint256 phase);

    // Thrown when a phase max amount is exceeded by a claim
    error PhaseAmountExceeded(uint256 phase);

    // Emitted whenever a phase is initialized
    event PhaseInitialized(uint256 indexed phase, uint256 maxAmount);

    // Emitted whenever a phase is ended
    event PhaseEnded(uint256 indexed phase);

    // Emitted whenever a new round for a certain phase has started
    event PhaseRoundStarted(uint256 indexed phase, bytes32[] merkleRoots);

    // Emitted whenever an user claims
    event PhaseClaimed(uint256 indexed phase, address user, bytes32 merkleRoot, uint256 amount);

    IERC20 public immutable khoodToken;

    address public immutable treasury;

    // Mapping with merkle roots corresponding to each phase
    mapping(uint256 => bytes32[]) public merkleRoots;

    // Mapping with max amount claimable corresponding to each phase
    mapping(uint256 => uint256) public maxAmounts;

    // Mapping with claimed amounts corresponding to each phase
    mapping(uint256 => uint256) public claimedAmounts;

    // Mapping used to mark if a certain user has claimed the tokens for a corresponding phase
    mapping(uint256 => mapping(address => uint256)) public claimed;

    // Block number at which the current round expires
    mapping(uint256 => uint256) public roundExpiryBlocks;

    constructor(address _khoodToken, address _treasury) {
        khoodToken = IERC20(_khoodToken);
        treasury = _treasury;
        _initializeEIP712("KreatorhoodAirdropDistributor");
    }

    function initializePhase(uint256 _phase, uint256 _maxAmount) external onlyOwner {
        if (maxAmounts[_phase] != 0) revert PhaseAlreadyInitialized(_phase);
        maxAmounts[_phase] = _maxAmount;

        emit PhaseInitialized(_phase, _maxAmount);
    }

    function startPhaseNewRound(
        uint256 _phase,
        bytes32[] calldata _merkleRoots,
        uint256 _roundExpiryBlock
    ) external onlyOwner {
        if (_roundExpiryBlock <= block.number) revert LibMerkleDistributor.InvalidExpiryBlock(_roundExpiryBlock);
        if (maxAmounts[_phase] == 0) revert PhaseNotInitialized(_phase);
        roundExpiryBlocks[_phase] = _roundExpiryBlock;
        merkleRoots[_phase] = _merkleRoots;

        emit PhaseRoundStarted(_phase, _merkleRoots);
    }

    function claim(
        uint256 _phase,
        LibMerkleDistributor.Claim calldata _claim,
        LibMerkleProof.MerkleTree calldata _merkleTree,
        uint8 _merklePosition,
        bytes calldata _signature
    ) external {
        uint256 _maxAmount = maxAmounts[_phase];
        if (_maxAmount == 0 || merkleRoots[_phase].length == 0) revert PhaseNotInitialized(_phase);
        uint256 _claimedAmounts = claimedAmounts[_phase];
        if (_claimedAmounts == _maxAmount) revert PhaseAlreadyEnded(_phase);
        if (roundExpiryBlocks[_phase] < block.number)
            revert LibMerkleDistributor.RoundExpired(_merkleTree.root, roundExpiryBlocks[_phase]);
        if (_merkleTree.root != merkleRoots[_phase][_merklePosition])
            revert LibMerkleDistributor.InvalidRound(_merkleTree.root);
        if (_claim.user != _msgSender()) revert LibMerkleDistributor.InvalidUser(_msgSender(), _claim.user);
        if (claimed[_phase][_msgSender()] != 0)
            revert LibMerkleDistributor.UsedAlreadyClaimed(_merkleTree.root, _msgSender());

        uint256 proofLength = _merkleTree.proof.length;
        bytes32 claimHash = LibMerkleDistributor.hashClaim(_claim);
        if (proofLength != 0) {
            if (proofLength > LibMerkleDistributor.MAX_PROOF_LENGTH) {
                revert LibMerkleDistributor.ProofTooLarge(proofLength);
            }
            if (!LibMerkleProof.verifyProof(_merkleTree.proof, _merkleTree.root, claimHash)) {
                revert LibMerkleDistributor.InvalidProof();
            }

            claimHash = LibMerkleDistributor.hashBatchClaim(_merkleTree.root, proofLength);
        } else {
            revert LibMerkleDistributor.InvalidProof();
        }
        (address signer, ECDSA.RecoverError err) = ECDSA.tryRecover(toTypedMessageHash(claimHash), _signature);
        if (err != ECDSA.RecoverError.NoError) revert LibMerkleDistributor.InvalidSignature(_signature);
        if (owner() != signer) revert LibMerkleDistributor.ProofNotSignedByOwner(signer);

        if (_claim.token == address(khoodToken)) khoodToken.safeTransfer(_msgSender(), _claim.amount);
        else revert LibMerkleDistributor.InvalidClaimToken(_claim.token);

        claimed[_phase][_msgSender()] = 1;
        if (_claimedAmounts + _claim.amount > _maxAmount) revert PhaseAmountExceeded(_phase);
        claimedAmounts[_phase] = _claimedAmounts + _claim.amount;

        emit PhaseClaimed(_phase, _msgSender(), _merkleTree.root, _claim.amount);
    }

    function endPhase(uint256 _phase) external onlyOwner {
        uint256 _maxAmounts = maxAmounts[_phase];
        if (_maxAmounts == 0) revert PhaseNotInitialized(_phase);
        uint256 remainingAmount = _maxAmounts - claimedAmounts[_phase];
        khoodToken.safeTransfer(treasury, remainingAmount);
        claimedAmounts[_phase] = _maxAmounts;

        emit PhaseEnded(_phase);
    }
}