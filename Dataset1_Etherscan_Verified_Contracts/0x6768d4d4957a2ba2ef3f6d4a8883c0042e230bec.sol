pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract MonkeyFiVesting {
    struct LockInfo {
        uint amount;
        uint releaseTime;
        bool released;
    }

    //Team addresses
    address public constant FOUNDER_SEB_ADDR =
        0x2DbeF457157D10d7B6712258971f68A639a78fB5;
    address public constant FOUNDER_ANI_ADDR =
        0x8531525964b35AE0E264B3B861E169402cFF8546;
    address public constant EMPLOYEE_PAS_ADDR =
        0x4Df936e5b98dd686a56E3966DBD78b49CE74D33D;
    address public constant EMPLOYEE_DEX_ADDR =
        0x6F1c7Dc6Df9D8dba456ccB4668d0fb95a5fBaaEc;

    address public constant owner = 0x2DBDF32A5db674dcedCB896314C128a7651DBC54;

    //Team amounts
    uint private constant FOUNDER_SEB_AMOUNT = 20_000_000;
    uint private constant FOUNDER_ANI_AMOUNT = 6_666_668;
    uint private constant EMPLOYEE_PAS_AMOUNT = 3_333_334;
    uint private constant EMPLOYEE_DEX_AMOUNT = 200_000;

    uint private constant MINIMUM_AMOUNT_TO_LOCK = 100_000;

    //Team locks
    uint private constant ONE_WEEK = 3600 * 24 * 7;
    uint private constant THREE_MONTHS = 3600 * 24 * 30 * 3;
    uint private constant SIX_MONTHS = 3600 * 24 * 30 * 6;

    mapping(address => LockInfo[]) private locksMap;

    ERC20 public immutable monkeyFi;
    uint private immutable decimals;

    uint public totalLockedTokens;

    modifier onlyOwner() {
        require(owner == msg.sender, "not owner");
        _;
    }

    constructor() {
        monkeyFi = ERC20(msg.sender);
        uint _decimals = 10 ** monkeyFi.decimals();
        decimals = _decimals;
        uint _currentTimestamp = block.timestamp;

        _createVesting(
            FOUNDER_SEB_ADDR,
            FOUNDER_SEB_AMOUNT * _decimals,
            2,
            THREE_MONTHS,
            _currentTimestamp
        );

        _createVesting(
            FOUNDER_ANI_ADDR,
            FOUNDER_ANI_AMOUNT * _decimals,
            2,
            THREE_MONTHS,
            _currentTimestamp
        );

        _createVesting(
            EMPLOYEE_PAS_ADDR,
            EMPLOYEE_PAS_AMOUNT * _decimals,
            2,
            THREE_MONTHS,
            _currentTimestamp
        );

        _createVesting(
            EMPLOYEE_DEX_ADDR,
            EMPLOYEE_DEX_AMOUNT * _decimals,
            2,
            THREE_MONTHS,
            _currentTimestamp
        );
    }

    function claimTokens() external {
        LockInfo[] storage lockInfos = locksMap[msg.sender];
        uint currentTimestamp = block.timestamp;
        require(lockInfos.length > 0, "unauthorized sender");
        uint amountToWithdraw = 0;
        for (uint i = 0; i < lockInfos.length; i++) {
            LockInfo storage lockInfo = lockInfos[i];
            if (
                lockInfo.released == false &&
                lockInfo.releaseTime <= currentTimestamp
            ) {
                amountToWithdraw += lockInfo.amount;
                lockInfo.released = true;
            }
        }
        require(amountToWithdraw > 0, "tokens not yet released");
        monkeyFi.transfer(msg.sender, amountToWithdraw);
        totalLockedTokens -= amountToWithdraw;
    }

    function createVesting(
        uint amount,
        uint chunks,
        uint vestingPeriodTimestamp
    ) external {
        uint currentTimestamp = block.timestamp;
        require(
            monkeyFi.allowance(msg.sender, address(this)) >= amount,
            "allowance insufficient"
        );
        monkeyFi.transferFrom(msg.sender, address(this), amount);
        _createVesting(
            msg.sender,
            amount,
            chunks,
            vestingPeriodTimestamp,
            currentTimestamp
        );
    }

    function createAdminVestings(
        address[] memory users,
        uint[] memory amounts,
        uint chunks,
        uint vestingPeriodTimestamp
    ) external onlyOwner {
        require(
            users.length > 0 && users.length == amounts.length,
            "invalid array inputs"
        );
        uint currentTimestamp = block.timestamp;
        for (uint i = 0; i < users.length; i++) {
            _createVesting(
                users[i],
                amounts[i],
                chunks,
                vestingPeriodTimestamp,
                currentTimestamp
            );
        }
    }

    function withdrawTokens(uint amount) external onlyOwner {
        uint remainingTokens = monkeyFi.balanceOf(address(this));
        require(remainingTokens >= amount, "no remaining tokens");
        if(amount == 0){
            monkeyFi.transfer(owner, remainingTokens);
        }else{
            monkeyFi.transfer(owner, amount);
        }
    }

    function deleteAdminVesting(address _user) external onlyOwner {
        require(_user != address(0), "invalid zero address");
        delete locksMap[_user];
    }

    function getLocks(address _user) public view returns (LockInfo[] memory) {
        return locksMap[_user];
    }

    function _createVesting(
        address _user,
        uint _amount, //amount with decimals
        uint _chunks,
        uint _vestingPeriodTimestamp,
        uint _currentTimestamp
    ) private {
        require(
            _amount > MINIMUM_AMOUNT_TO_LOCK * decimals,
            "invalid amount to lock"
        );
        require(_vestingPeriodTimestamp >= ONE_WEEK, "invalid vesting period");
        require(_chunks <= 7, "too many chunks");

        uint releaseTimestamp = _currentTimestamp;
        uint chunkAmount = roundWithDecimals(_amount / _chunks, decimals);

        for (uint i = 0; i < _chunks; i++) {
            releaseTimestamp += _vestingPeriodTimestamp;
            locksMap[_user].push(
                LockInfo(chunkAmount, releaseTimestamp, false)
            );
        }
        totalLockedTokens += _amount;
    }

    function roundWithDecimals(
        uint _quantity,
        uint _decimals
    ) internal pure returns (uint result) {
        uint factor = _decimals;
        uint halfFactor = factor / 2;
        result = ((_quantity + halfFactor) / factor) * factor;
    }
}