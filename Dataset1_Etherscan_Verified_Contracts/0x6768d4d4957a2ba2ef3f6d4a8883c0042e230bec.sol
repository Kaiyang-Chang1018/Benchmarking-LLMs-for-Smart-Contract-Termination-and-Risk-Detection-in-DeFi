pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract MonkeyFiStaking {
    uint private constant ONE_MONTH = 3600 * 24 * 30;
    uint private constant THREE_MONTHS = ONE_MONTH * 3;
    uint private constant SIX_MONTHS = ONE_MONTH * 6;
    uint private constant ONE_YEAR = ONE_MONTH * 12;

    uint public constant APR_ONE_MONTH = 5;
    uint public constant APR_THREE_MONTHS = 15;
    uint public constant APR_SIX_MONTHS = 40;
    uint public constant APR_ONE_YEAR = 100;

    address public constant owner = 0x2DBDF32A5db674dcedCB896314C128a7651DBC54;

    uint public minimumAmount;

    uint public totalTokenRewards;

    struct StakeInfo {
        uint amount;
        uint claimTime;
        bool released;
        uint rewardAmount;
    }

    enum StakingPlan {
        ONE_MONTH,
        THREE_MONTHS,
        SIX_MONTHS,
        ONE_YEAR
    }

    event StakeCreated(
        address indexed user,
        uint amount,
        uint claimTime,
        uint rewardAmount
    );

    event TokensClaimed(address indexed user, uint amount, uint timestamp);

    mapping(address => StakeInfo[]) private stakingMap;

    ERC20 public immutable monkeyFi;
    uint private immutable decimals;

    modifier onlyOwner() {
        require(owner == msg.sender, "not owner");
        _;
    }

    constructor() {
        monkeyFi = ERC20(msg.sender);
        decimals = 10 ** monkeyFi.decimals();
        minimumAmount = 100 * decimals;
    }

    function stakeTokens(StakingPlan plan, uint amount) external {
        require(
            monkeyFi.balanceOf(msg.sender) >= amount,
            "insufficient amount"
        );
        require(
            monkeyFi.allowance(msg.sender, address(this)) >= amount,
            "insufficient allowance"
        );
        require(amount >= minimumAmount, "insufficient minimum amount");
        monkeyFi.transferFrom(msg.sender, address(this), amount);

        uint currentTimestamp = block.timestamp;
        StakeInfo memory stakeInfo = calculateStakingReward(
            plan,
            amount,
            currentTimestamp
        );
        stakingMap[msg.sender].push(stakeInfo);
        totalTokenRewards += stakeInfo.rewardAmount;
        emit StakeCreated(
            msg.sender,
            amount,
            stakeInfo.claimTime,
            (stakeInfo.rewardAmount - amount)
        );
    }

    function claimTokens() external {
        address user = msg.sender;
        StakeInfo[] storage stakes = stakingMap[user];
        require(stakes.length > 0, "no stakes found");

        uint currentTimestamp = block.timestamp;
        uint claimableAmount = 0;
        for (uint i = 0; i < stakes.length; i++) {
            StakeInfo storage stakeInfo = stakes[i];
            if (
                stakeInfo.released == false &&
                currentTimestamp >= stakeInfo.claimTime
            ) {
                stakeInfo.released = true;
                claimableAmount += stakeInfo.rewardAmount;
            }
        }
        require(claimableAmount > 0, "nothing to claim");
        require(
            monkeyFi.balanceOf(address(this)) >= claimableAmount,
            "insufficient tokens"
        );
        monkeyFi.transfer(user, claimableAmount);
        totalTokenRewards -= claimableAmount;

        emit TokensClaimed(user, claimableAmount, currentTimestamp);
    }

    function withdrawTokens() external onlyOwner {
        uint remainingTokens = monkeyFi.balanceOf(address(this));
        require(remainingTokens > 0, "no remaining tokens");
        monkeyFi.transfer(owner, remainingTokens);
    }

    function setMinimumAmountTokens(uint _minimumAmount) external onlyOwner {
        minimumAmount = _minimumAmount * decimals;
    }

    function getClaimableAmount(
        address user
    ) public view returns (uint claimableAmount) {
        StakeInfo[] memory stakes = stakingMap[user];
        uint currentTimestamp = block.timestamp;
        for (uint i = 0; i < stakes.length; i++) {
            StakeInfo memory stakeInfo = stakes[i];
            if (
                stakeInfo.released == false &&
                stakeInfo.claimTime <= currentTimestamp
            ) {
                claimableAmount += stakeInfo.rewardAmount;
            }
        }
    }

    function getStakings(
        address _user
    ) public view returns (StakeInfo[] memory) {
        return stakingMap[_user];
    }

    function calculateStakingReward(
        StakingPlan plan,
        uint _amount,
        uint _currentTimestamp
    ) private pure returns (StakeInfo memory) {
        uint _claimTime;
        uint _rewardAmount;

        if (plan == StakingPlan.ONE_MONTH) {
            _rewardAmount = _amount + calculateReward(APR_ONE_MONTH, _amount);
            _claimTime = _currentTimestamp + ONE_MONTH;
        } else if (plan == StakingPlan.THREE_MONTHS) {
            _rewardAmount =
                _amount +
                calculateReward(APR_THREE_MONTHS, _amount);
            _claimTime = _currentTimestamp + THREE_MONTHS;
        } else if (plan == StakingPlan.SIX_MONTHS) {
            _rewardAmount = _amount + calculateReward(APR_SIX_MONTHS, _amount);
            _claimTime = _currentTimestamp + SIX_MONTHS;
        } else {
            _rewardAmount = _amount + calculateReward(APR_ONE_YEAR, _amount);
            _claimTime = _currentTimestamp + ONE_YEAR;
        }

        return
            StakeInfo({
                amount: _amount,
                claimTime: _claimTime,
                released: false,
                rewardAmount: _rewardAmount
            });
    }

    function calculateReward(
        uint apr,
        uint amount
    ) private pure returns (uint) {
        uint APR = apr * 1e16;
        uint reward = (amount * APR) / 1e18;
        return reward;
    }
}
