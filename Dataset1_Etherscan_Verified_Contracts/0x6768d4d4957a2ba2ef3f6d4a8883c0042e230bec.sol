        );
        whitelist[monkeyFiVesting.FOUNDER_SEB_ADDR()] = true;
        whitelist[monkeyFiVesting.FOUNDER_ANI_ADDR()] = true;
        whitelist[monkeyFiVesting.EMPLOYEE_PAS_ADDR()] = true;
        whitelist[monkeyFiVesting.EMPLOYEE_DEX_ADDR()] = true;
        whitelist[address(monkeyFiVesting)] = true;
        whitelist[address(monkeyFiStaking)] = true;
        whitelist[address(this)] = true;

        for (uint i = 0; i < _brokers.length; i++) {
            brokers[_brokers[i]] = true;
        }

        initialized = true;
        emit MonkeyFiInitialized();
    }

    function addBroker(address _broker) external onlyOwner {
        require(_broker != address(0), "invalid broker");
        brokers[_broker] = true;
    }

    function removeBroker(address _broker) external onlyOwner {
        delete brokers[_broker];
    }

    function setFees(uint _buyFee, uint _sellFee) external onlyOwner {
        require(
            _buyFee <= MAX_BUY_FEE && _sellFee <= MAX_SELL_FEE,
            "overpriced fees"
        );
        buyFee = _buyFee;
        sellFee = _sellFee;
        emit UpdatedFees(buyFee, sellFee);
    }

    function setPool(address _newPool) external onlyOwner {
        address oldPool = poolAddress;
        poolAddress = _newPool;
        emit PoolChanged(oldPool, _newPool);
    }

    function enableTrading(address _poolAddress) external override {
        require(msg.sender == presaleAddress, "not presale address");
        require(!tradingEnabled, "trading already enabled");
        require(isUniswapV3Pool(_poolAddress), "not v3 pool address");
        poolAddress = _poolAddress;
        tradingEnabled = true;
        tradingEnabledTimestamp = block.timestamp;
        emit TradingEnabled(tradingEnabledTimestamp, poolAddress);
    }

    function _update(
        address from,
        address to,
        uint256 value
    ) internal virtual override {
        require(isUpdateAllowed(from), "update not allowed");

        if (!tradingEnabled) {
            super._update(from, to, value);
            return;
        }
        TransferFeeType memory transferFeeType = getTransferFeeType(from, to);
        uint fee = transferFeeType.fee;
        if (fee == 0) {
            super._update(from, to, value);
        } else {
            _updateAndtakeFee(from, to, value, transferFeeType);
        }
    }

    function _updateAndtakeFee(address from, address to, uint256 value, TransferFeeType memory transferFeeType) internal {
        uint fee = transferFeeType.fee;
        uint feeAmount = (value * fee) / DIVISOR;
        uint feeMarketing = (feeAmount * FEE_SPLIT) / 100;
        uint feeDevelopment = feeAmount - feeMarketing;
        uint freeAmount = value - feeAmount;

        if(transferFeeType.poolOrigin == false){
            super._update(from, to, freeAmount);
            super._update(from, MARKETING_ADDR, feeMarketing);
            super._update(from, DEVELOPMENT_ADDR, feeDevelopment);
        }else{
            if(transferFeeType.purchase == true){
                super._update(from, to, freeAmount);
                super._update(from, MARKETING_ADDR, feeMarketing);
                super._update(from, DEVELOPMENT_ADDR, feeDevelopment);
            }else{
               uint balance = balanceOf(from);
               if(balance == value){
                    super._update(from, to, value);
               }else if((balance - value) < feeAmount){
                    uint correctedFeeAmount = balance - value;
                    uint correctedFeeMarketing = (correctedFeeAmount * FEE_SPLIT) / 100;
                    uint correctedFeeDevelopment = correctedFeeAmount - correctedFeeMarketing;
                    super._update(from, to, value);
                    super._update(from, MARKETING_ADDR, correctedFeeMarketing);
                    super._update(from, DEVELOPMENT_ADDR, correctedFeeDevelopment);
               }else{
                    super._update(from, to, value);
                    super._update(from, MARKETING_ADDR, feeMarketing);
                    super._update(from, DEVELOPMENT_ADDR, feeDevelopment);
               }
            }
        }


    }

    function getTransferFeeType(address _from, address _to) internal view returns (TransferFeeType memory) {
        if (whitelist[_from] == true || whitelist[_to] == true) {
            return TransferFeeType(false, false, 0);
        }

        bool isFromBroker = brokers[_from];
        bool isToBroker = brokers[_to];
        bool isFromPool = _from == poolAddress;
        bool isToPool = _to == poolAddress;

        if (isFromPool && !isToBroker) {
            uint fee = buyFee + getPenaltyFee();
            return TransferFeeType(true, true, fee);
        }

        if (isToPool && !isFromBroker) {
            uint fee = sellFee + getPenaltyFee();
            return TransferFeeType(false, true, fee);
        }

        if (isFromBroker && !isToBroker && !isToPool) {
            uint fee = buyFee + getPenaltyFee();
            return TransferFeeType(true, false, fee);
        }

        if (!isFromBroker && !isFromPool && isToBroker) {
            uint fee = sellFee + getPenaltyFee();
            return TransferFeeType(false, false, fee);
        }

        return TransferFeeType(false, false, 0);
    }

    function getPenaltyFee() internal view returns (uint penaltyFee) {
        uint currentTimestamp = block.timestamp;
        uint maxPenaltyTimestamp = tradingEnabledTimestamp +
            PENALTY_PERIOD *
            PENALTY_PERIOD_NUMBER;
        if (currentTimestamp >= maxPenaltyTimestamp) {
            return 0;
        }
        uint count = 0;
        for (
            uint timestamp = tradingEnabledTimestamp;
            timestamp < maxPenaltyTimestamp;
            timestamp += PENALTY_PERIOD
        ) {
            uint endTimestamp = timestamp + PENALTY_PERIOD;
            if (
                timestamp <= currentTimestamp && currentTimestamp < endTimestamp
            ) {
                return MAX_PENALTY_FEE - DELTA_PENALTY_FEE * count;
            }
            count++;
        }
    }

    function isUpdateAllowed(address _from) internal view returns (bool) {
        return
            tradingEnabled ||
            _from == address(0) ||
            _from == address(this) ||
            whitelist[_from];
    }

    function isUniswapV3Pool(address pool) internal view returns (bool) {
        try IUniswapV3Pool(pool).fee() {
            return true;
        } catch {
            return false;
        }
    }
}
