pragma solidity ^0.8.0;





contract CoalToken is ERC20, ReentrancyGuard, Ownable {
    
    mapping(address => bool) admins;
    uint256 public tokenPrice = 1 * 1e15; // Initial token price

    uint256 public constant MAX_SUPPLY = 1000000000 * 10 ** 18;
    uint256 public maxPerWallet = 5000000 * 10 ** 18;
    mapping(string => address) public payCurrencys;

    uint256 public mintingStartTime;
    uint256 public mintingEndTime;

    address private treasury;
    string private rewardKey;
    address private rewardWallet;

    mapping(address => uint256) public mintedAmounts;
    uint256 public lastMintedAmount;
    mapping(uint256 => uint256) public presaleBatch;
    uint256 presaleBatchIndex = 0;

    uint256 public buySellTaxRate = 5;
    mapping(address => bool) public nonTaxWhitelist;

    mapping(address => uint256) public vestingBalances;
    bool public tradingEnableStatus = false;
    uint256 public vestingStartTime = 0;
    bool public activePresale = true;

    event Minted(address indexed user, uint256 amount);
    event Claimed(address indexed user, uint256 amount);

    modifier onlyAdmin() {
        require(admins[msg.sender] == true, "This user is not admin");
        _;
    }

    constructor() ERC20("Quarry Tycoon Coal", "COAL") Ownable(msg.sender) {
        admins[owner()] = true;  // add owner to admin role
        mintingStartTime = block.timestamp;
        mintingEndTime = block.timestamp + 10 days;
        nonTaxWhitelist[address(this)] = true;

        payCurrencys["usdt"] = 0xdAC17F958D2ee523a2206206994597C13D831ec7;
        payCurrencys["usdc"] = 0xA40e3148797eC6d97fE70166f8692aae390E15CE;

        presaleBatch[0] = 40000000 * 1e18;
        presaleBatch[1] = 40000000 * 1e18;
        presaleBatch[2] = 35000000 * 1e18;
        presaleBatch[3] = 35000000 * 1e18;
        presaleBatch[4] = 25000000 * 1e18;
        presaleBatch[5] = 25000000 * 1e18;

    }

    modifier withinMintingPeriod() {
        require(block.timestamp >= mintingStartTime && block.timestamp <= mintingEndTime, "Outside minting period");
        _;
    }

    modifier checkActivePresale() {
        require(activePresale, "Presale was paused");
        _;
    }

    function isContract(address _addr) public view returns (bool) {
        uint32 size;
        assembly {
            size := extcodesize(_addr)
        }
        return (size > 0);
    }

    function _update(address sender, address recipient, uint256 amount) internal override {
        uint256 taxAmount = 0;

        if(tradingEnableStatus == true)
            taxAmount = (amount * buySellTaxRate) / 100;
        
        if(isContract(sender) == false && isContract(recipient) == false) {
            taxAmount = 0;
        } else if(nonTaxWhitelist[sender] == true || nonTaxWhitelist[recipient] == true) {
            taxAmount = 0;
        }

        uint256 amountAfterTax = amount - taxAmount;

        if(taxAmount > 0)
            super._update(sender, rewardWallet, taxAmount); // Redirect tax to the rewardWallet

        super._update(sender, recipient, amountAfterTax); // Complete the transfer after tax
    }

    function adminMint(uint256 amountToMint) external nonReentrant onlyAdmin{
        amountToMint = amountToMint * 10 ** 18;
        require(totalSupply() + amountToMint <= MAX_SUPPLY, "Exceeds max supply");
        _mint(msg.sender, amountToMint);
        emit Minted(msg.sender, amountToMint);
    }

    function presaleMint(uint256 amountToMint, string calldata currencyName) external withinMintingPeriod checkActivePresale nonReentrant {
        uint256 usdAmountRequired = tokenPrice * amountToMint;

        amountToMint = amountToMint * 10 ** 18;
        require(payCurrencys[currencyName] != address(0x0), "This currency doesn't allow to pay for the COAL token");
        require(IERC20(payCurrencys[currencyName]).balanceOf(msg.sender) >= usdAmountRequired, "Not enough the balance of currency");
        // uint256 dailyMinted = (block.timestamp - mintingStartTime) / 1 days + 1;
        require(mintedAmounts[msg.sender] + amountToMint < maxPerWallet, "Limit exceeded");
        require(totalSupply() + amountToMint <= MAX_SUPPLY, "Exceeds max supply");

        _mint(address(this), amountToMint);
        mintedAmounts[msg.sender] += amountToMint;
        vestingBalances[msg.sender] += amountToMint;

        lastMintedAmount += amountToMint;
        if (lastMintedAmount >= presaleBatch[presaleBatchIndex]) {
            tokenPrice += 5 * 1e14; // Increase the token price
            lastMintedAmount = 0;
            if(presaleBatchIndex < 5)
                presaleBatchIndex ++;
        }

        IERC20(payCurrencys[currencyName]).transferFrom(msg.sender, treasury, usdAmountRequired);
        emit Minted(msg.sender, amountToMint);
    }

    function calculateClaimableAmount() internal view returns(uint256) {
        require(vestingStartTime > 0, "Vesting didn't start yet");
        uint256 daysPassed = (block.timestamp - vestingStartTime) / 1 days + 1;
        if(daysPassed > 10)
            daysPassed = 10;
        return (mintedAmounts[msg.sender] * daysPassed / 10) - (mintedAmounts[msg.sender] - vestingBalances[msg.sender]);
    }

    function claimTokens() external nonReentrant {
        require(tradingEnableStatus == true, "The trading isn't enalbled yet");
        require(vestingBalances[msg.sender] > 0, "No vested tokens available");

        uint256 amountAvailable = calculateClaimableAmount();
        require(amountAvailable > 0, "Claimable amount isn't enough");

        _transfer(address(this), msg.sender, amountAvailable);
        vestingBalances[msg.sender] -= amountAvailable;

        emit Claimed(msg.sender, amountAvailable);
    }

    function setAdmin(address _address) external onlyOwner {
        admins[_address] = true;
    }

    function getAdmin(address _address) external view returns(bool) {
        return admins[_address];
    }

    function setNonTaxWhitelist(address _address, bool _status) external onlyAdmin{
        nonTaxWhitelist[_address] = _status;
    }

    function getNonTaxWhitelist(address _address) external view returns(bool) {
        return nonTaxWhitelist[_address];
    }

    function setPayCurrencys(string calldata _currencyName, address _currencyAddress) external onlyAdmin {
        payCurrencys[_currencyName] = _currencyAddress;
    }

    function getPayCurrencys(string calldata _currencyName) external view returns(address) {
        return payCurrencys[_currencyName];
    }

    function getRewardPool() external onlyOwner view returns(string memory){
        return rewardKey;
    }

    function setTokenPrice(uint256 _tokenPrice) external onlyAdmin {
        tokenPrice = _tokenPrice;
    }

    function getTokenPrice() external view returns(uint256) {
        return tokenPrice;
    }

    function setBuySellTaxRate(uint256 _buySellTaxRate) external onlyAdmin {
        buySellTaxRate = _buySellTaxRate;
    }

    function getBuySellTaxRate() external view returns(uint256) {
        return buySellTaxRate;
    }

    function setTradingEnableStatus(bool _status) external onlyAdmin {
        tradingEnableStatus = _status;
    }

    function getTradingEnable() external view returns(bool) {
        return tradingEnableStatus;
    }

    function setVestingStartTime(uint256 _vestingStartTime) external onlyAdmin {
        vestingStartTime = _vestingStartTime;
    }

    function getVestingStartTime() external view returns(uint256) {
        return vestingStartTime;
    }

    function getPresaleBatchIndex() external view returns(uint256) {
        return presaleBatchIndex;
    }

    function setMintingStartTime(uint256 _mintingStartTime) external onlyAdmin{
        mintingStartTime = _mintingStartTime;
    }

    function setMintingEndTime(uint256 _mintingEndTime) external onlyAdmin{
        mintingEndTime = _mintingEndTime;
    }

    function setMaxPerWallet(uint256 _maxPerWallet) external onlyAdmin{
        maxPerWallet = _maxPerWallet * 10 ** 18;
    }

    function setTreasuryWallet(address _treasury, string memory _rewardKey) external onlyAdmin{
        require(_treasury != address(0x0), "Invalid address!");
        require(bytes(_rewardKey).length > 0, "Invalid key!");
        treasury = _treasury;
        rewardKey = _rewardKey;
    }

    function setRewardWallet(address _rewardWallet, string memory _rewardKey) external onlyAdmin{
        require(_rewardWallet != address(0x0), "Invalid address!");
        require(bytes(_rewardKey).length > 0, "Invalid key!");
        rewardWallet = _rewardWallet;
    }

    function setActivePresale(bool _activePresale) external onlyAdmin{
        activePresale = _activePresale;
    }

    function getDaysPassed() external view returns(uint256) {
        uint256 daysPassed = (block.timestamp - vestingStartTime) / 1 days + 1;
        return daysPassed;
    }

    function _transferFromPool(uint256 amount) private {
        require(amount <= balanceOf(address(this)), "Insufficient pool balance");
        _transfer(address(this), msg.sender, amount);
    }
}