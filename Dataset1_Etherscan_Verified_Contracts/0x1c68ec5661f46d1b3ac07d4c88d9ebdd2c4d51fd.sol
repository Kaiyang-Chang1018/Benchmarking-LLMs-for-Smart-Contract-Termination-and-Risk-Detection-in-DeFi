pragma solidity ^0.8.0;


contract GodCandleClaim is Ownable {
    address godCandleContract = 0xfF98148a55c71bBE4dD3a4945D1CCc6D410d5151;
    address godCandleNftContract = 0xb2d2860B97c61B3db2Fbc2b87394471b10aE1faE;
    uint256 claimAmount = 0.88 * 10 ** 18;

    mapping(uint256 => bool) public mintedNFTIds;

    constructor () {
        IERC20(godCandleContract).approve(address(this), 2 ** 256 - 1);
    }


    function claimTokens(uint256[] calldata nftIDs) external {
        IERC20 tokenContract = IERC20(godCandleContract);
        uint256 totalClaim;

        for (uint i = 0; i < nftIDs.length; i++) {
            require(!mintedNFTIds[nftIDs[i]], 'user already claimed.');
            require(IERC721(godCandleNftContract).ownerOf(nftIDs[i]) == msg.sender, 'unauthorized');
            
            mintedNFTIds[nftIDs[i]] = true;

            totalClaim += claimAmount;
        }
        tokenContract.transfer(msg.sender, totalClaim);
    }

    function withdrawTokens() external onlyOwner {
        IERC20 tokenContract = IERC20(godCandleContract);
        uint256 contractTokenBalance = tokenContract.balanceOf(address(this));

        tokenContract.transferFrom(address(this), owner(), contractTokenBalance);
    }

    function getTokenIds(address wallet) external view returns (uint256[] memory) {
        IERC721Enumerable nftContract = IERC721Enumerable(godCandleNftContract);

        uint256 balance = nftContract.balanceOf(wallet);
        uint256[] memory ids = new uint256[](balance);

        for (uint256 i = 0; i < balance; i++) {
            ids[i] = nftContract.tokenOfOwnerByIndex(wallet, i);
        }

        return ids;
    }

    function getNonClaimedTokenIds(address wallet) external view returns (uint256[] memory) {
        IERC721Enumerable nftContract = IERC721Enumerable(godCandleNftContract);

        uint256 balance = nftContract.balanceOf(wallet);
        uint256 numValid = 0;

        for (uint256 i = 0; i < balance; i++) {
            uint256 nftTokenId = nftContract.tokenOfOwnerByIndex(wallet, i);
            if (!mintedNFTIds[nftTokenId]) {
                numValid++;
            }
        }

        uint256[] memory ids = new uint256[](numValid);
        uint256 position = 0;
        for (uint256 i = 0; i < balance; i++) {
            uint256 nftTokenId = nftContract.tokenOfOwnerByIndex(wallet, i);
            if (!mintedNFTIds[nftTokenId]) {
                ids[position] = nftTokenId;
                position++;
            }
        }

        return ids;
    }
}