import "solady/tokens/ERC20.sol";
import "solady/auth/Ownable.sol";
import "solady/utils/MerkleProofLib.sol";

pragma solidity 0.8.28;

contract UniqlyBuyback is Ownable {
    ERC20 public usdc;
    bytes32 public merkleRoot;

    mapping(bytes32 => bool) public isClaimed;

    event BuybackClaimed(address indexed wallet, uint256 amount);

    using MerkleProofLib for bytes32;

    constructor() {
        usdc = ERC20(0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48);
        _initializeOwner(msg.sender);
    }

    function claimBuyback(
        address wallet,
        uint256 tokenAmount,
        bytes32[] calldata merkleProof
    ) external {
        bytes32 merkleLeaf = keccak256(abi.encodePacked(wallet, tokenAmount));
        require(!isClaimed[merkleLeaf], "Buyback already claimed");
        require(
            MerkleProofLib.verify(merkleProof, merkleRoot, merkleLeaf),
            "Invalid Merkle Proof"
        );

        isClaimed[merkleLeaf] = true;
        require(usdc.transfer(wallet, tokenAmount), "USDC transfer failed");
        emit BuybackClaimed(wallet, tokenAmount);
    }

    function withdrawTokens(
        address tokenContract,
        address to,
        uint256 amount
    ) external onlyOwner {
        require(ERC20(tokenContract).transfer(to, amount), "Transfer failed");
    }

    function withdraw(address to, uint256 amount) external onlyOwner {
        (bool success, ) = to.call{value: amount}("");
        require(success, "Transfer failed");
    }

    function setMerkleRoot(bytes32 _merkleRoot) external onlyOwner {
        merkleRoot = _merkleRoot;
    }
}