            require(infiniPassContract.ownerOf(passId) == msg.sender, "You must own the pass to claim");
            require(!passClaimed[passId], "This pass has already been used to claim tokens");

            uint256 rarity = infiniPassContract.getTokenRarity(passId);
            require(rarity <= 1, "Invalid pass rarity");

            totalTokensToClaim += (rarity == 1) ? ULTIMATE_TOKENS : COMMUNITY_TOKENS;
            passClaimed[passId] = true;
        }

        require(totalTokensToClaim > 0, "No tokens to claim");
        require(claimedTokens + totalTokensToClaim <= totalTokenSupply, "Not enough tokens left");

        // Update state
        claimedTokens += totalTokensToClaim;

        // Transfer tokens
        SafeTransferLib.safeTransfer(address(rewardToken), msg.sender, totalTokensToClaim);

        emit TokensClaimed(msg.sender, _passIds, totalTokensToClaim);
    }

    function getRemainingTokens() public view returns (uint256) {
        return totalTokenSupply - claimedTokens;
    }

    function getClaimStatus(uint256[] calldata passIds) external view returns (bool[] memory) {
        bool[] memory claimStatuses = new bool[](passIds.length);
        for (uint256 i = 0; i < passIds.length; i++) {
            require(passIds[i] <= MAX_TOKEN_ID_PASS, "Token ID exceeds maximum allowed");
            claimStatuses[i] = passClaimed[passIds[i]];
        }
        return claimStatuses;
    }

    function pause() external onlyOwner {
        isPaused = true;
    }

    function unpause() external onlyOwner {
        isPaused = false;
    }

    function withdrawUnclaimedTokens(address recipient, uint256 amount) external onlyOwner nonReentrant {
        require(recipient != address(0), "Zero address not allowed");
        require(amount > 0, "Amount must be positive");
        require(amount <= getRemainingTokens(), "Not enough unclaimed tokens");

        claimedTokens += amount;
        SafeTransferLib.safeTransfer(address(rewardToken), recipient, amount);

        emit TokensClaimed(
            recipient,
            new uint256[](0), // no pass IDs since this is a withdrawal
            amount
        );
    }

    function emergencyWithdraw(address recipient, uint256 amount) external onlyOwner nonReentrant whenPaused {
        require(recipient != address(0), "Zero address not allowed");
        require(amount > 0, "Amount must be positive");
        require(amount <= rewardToken.balanceOf(address(this)), "Insufficient balance");

        SafeTransferLib.safeTransfer(address(rewardToken), recipient, amount);

        emit TokensClaimed(
            recipient,
            new uint256[](0), // no pass IDs since this is an emergency withdrawal
            amount
        );
    }
}
