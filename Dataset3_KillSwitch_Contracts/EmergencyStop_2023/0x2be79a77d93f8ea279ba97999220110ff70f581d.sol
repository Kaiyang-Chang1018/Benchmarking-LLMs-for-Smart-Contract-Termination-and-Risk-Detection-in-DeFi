        if(tokensSold >= tokenAmount[5]) {
         isActive = false;
       }
        return true;
    }

    function buyWithEth(uint256 amount) external payable saleState(amount) whenNotPaused nonReentrant returns (bool) {
       (uint256 ethAmount, uint256 tokensBought) = ethBuyHelper(amount);
        require(msg.value >= ethAmount, "Less payment");
        uint256 excess = msg.value - ethAmount;
        tokensSold += tokensBought;
        if (tokensSold >= tokenAmount[saleIndex]) {
            if (saleIndex + 1 < tokenPrice.length) {
                saleIndex++;
            }
        }

        sendValue(payable(owner()), ethAmount);
        if (excess > 0) sendValue(payable(msg.sender), excess);
        emit TokensBought(
            msg.sender,
            tokensBought,
            address(0),
            ethAmount,
            block.timestamp
        );

        purchaseInfo storage userDetails = userInfo[msg.sender];
        userDetails.purchaseAmount += (tokensBought * baseDecimals);
        if(tokensSold >= tokenAmount[5]) {
         isActive = false;
        }
        return true;
    }

    // read only functions

    function getLatestPrice() public view returns (uint256) {
        (, int256 price, , , ) = priceFeed.latestRoundData();
        uint256 adjustedPriceWei = uint256(price) / 1e8;
        return uint256(adjustedPriceWei);
    }

    function calculatePrice(uint256 _amount) public view returns (uint256 USDTAmount, uint256 boughtAmt) {

        if (_amount + tokensSold > tokenAmount[saleIndex]) {
            require(isActive == true, "Sale Closed.");
            uint256 tokensRemaining = tokenAmount[saleIndex] -
                tokensSold;
            USDTAmount =
                tokensRemaining *
                tokenPrice[saleIndex];
                boughtAmt = tokensRemaining;
        } else {
            USDTAmount = _amount * tokenPrice[saleIndex];
            boughtAmt = _amount;
        }
    }


    function ethBuyHelper(uint256 amount) public view returns (uint256 ethAmount, uint256 tokensBought) {
        uint256 ethWeiPrice = getLatestPrice();
        (uint256 usdPrice, uint256 tokenB) = calculatePrice(amount);
        ethAmount = (usdPrice) / ethWeiPrice;
        tokensBought = tokenB;
    }

    function usdtBuyHelper(uint256 amount) public view returns (uint256 usdPrice, uint256 tokensBought) {
        (uint256 usdP, uint256 tokenB) = calculatePrice(amount);
        usdPrice = usdP;
        tokensBought = tokenB;
    }

    function getClaimableAmount(address _user) public view returns (uint256 claimableAmount) {
        claimableAmount = userInfo[_user].purchaseAmount;

    }

    function withdraw(uint256 _withdrawalIndex) external onlyOwner{
        if(_withdrawalIndex == 0) {
        (bool success, ) = payable(owner()).call{value: address(this).balance}("");
        require(success, "ETH Withdrawal failed");
        } else {
            uint256 balance = USDTInterface.balanceOf(
            address(this)
        );
         (bool success, ) = address(USDTInterface).call(
            abi.encodeWithSignature(
                "transfer(address,uint256)",
                owner(),
                balance
            )
        );
        require(success, "Token payment failed");
        }
    }
