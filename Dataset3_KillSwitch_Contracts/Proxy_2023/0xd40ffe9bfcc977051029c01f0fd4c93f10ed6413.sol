/// @title Eth Bridge - A descentralized bridge, for curated tokens, between ethereum and btc.
/// @author Leonardo Cardoso - <leonardo.cardoso@trac.network>
/// @author Jusuf Suljic - <jusuf.suljic@trac.network>
contract EthBridge is AccessControl {

    // The token data
    struct TokenData {
        string tick;
        uint8 decimals;
    }

    // The resolved token structure also containing the address
    struct Token {
        address token;
        string tick;
        uint8 decimals;
    }

    struct DiscountData {
        uint256 value;
        uint256 lock;
    }

    // keccak256("ADMIN_ROLE")
    bytes32 private constant ADMIN_ROLE = 0xa49807205ce4d355092ef5a8a18f56e8913cf4a201fbe287825b095693c21775;
    // Tokens linked list boundary.
    address private constant SENTINEL_TOKENS = address(0x1);
    // Starting/default fee percentage. (2.5%)
    uint256 private constant DEFAULT_FEE_PERCENTAGE = 250;
    // Minimum fee percentage (0.5%)
    uint256 private constant MINIMUM_FEE_PERCENTAGE = 50;
    // Utility for calculation. (100%)
    uint256 private constant BASE_PERCENTAGE = 10000;
    // Minimum amount of discount tokens user needs to hold in order to be eligible for the discount.
    uint256 public constant DISCOUNT_TOKEN_MIN_AMOUNT = 50 ether;
    // Calculated maximum amount of tokens user can have staked in order to get the lowest fee.
    uint256 public constant DISCOUNT_TOKEN_MAX_AMOUNT = 1000 ether;
    // The factor by which we will modify the fee according to the discount status. (0.1%)
    uint256 public constant BASE_FEE_MODIFIER = 10;
    // The lock time before the user can withdraw the tokens
    uint256 public constant LOCK_TIME = 180 days;

    // The address that will receive the fees
    address immutable private ADMIN;
    // The address that will receive the fees
    address public feeReceiver;

    // Tokens linked list
    mapping(address => address) internal curatedTokens;
    // The token list length
    uint256 public curatedTokenCount;
    // Tokens metadata
    mapping(address => TokenData) internal curatedTokenData;
    // Tokens balance that belongs to the bridge (through fees and not the pool itself) token => balance
    mapping(address => uint256) public bridgeBalance;
    // The balance for each user of the discount tokens (DISCOUNT_TOKEN) user => amount deposited
    mapping(address => DiscountData) public discountTokens;

    // Already bridged/redeemed vouchers
    mapping(bytes32 => bool) public bridgedTokens;
    // The token that will be used as a reference for discount
    address immutable public DISCOUNT_TOKEN;
    // The token that will be used as a reference for discount
    address immutable public CANISTER;

    /// @dev Constructor
    /// @param tokens Initial list of curated tokens
    /// @param ticks Initial of the curated ticks
    /// @param decimals Initial list of curated tokens decimals
    /// @param discountToken Token that will be used as a reference for the fee discount
    /// @param canister Address of the icp canister
    constructor(address[] memory tokens, string[] memory ticks, uint8[] memory decimals, address discountToken, address canister, address feeReceiver_) {
        if (tokens.length != ticks.length) revert InvalidArrayLength(tokens.length, ticks.length);
        if (tokens.length != decimals.length) revert InvalidArrayLength(tokens.length, decimals.length);
        if (discountToken == address(0)) revert InvalidToken(discountToken);
        if (canister == address(0)) revert InvalidCanister(canister);
        if (feeReceiver_ == address(0)) revert InvalidReceiver(feeReceiver_);

        ADMIN = _msgSender();
        _grantRole(ADMIN_ROLE, _msgSender());
        setupCuratedTokens(tokens, ticks, decimals);
        DISCOUNT_TOKEN = discountToken;
        CANISTER = canister;
        feeReceiver = feeReceiver_;
    }

    /// @dev Bridges the selected, preapproved, token into eth network
    /// @param account Target destination of the bridged tokens
    /// @param value The amount of tokens to be bridged
    /// @param token ETH token contract address
    /// @param nonce Nonce.
    /// @param signature Signature representing the voucher.
    function bridgeIn(address account, uint256 value, address token, uint256 nonce, bytes memory signature) public payable {
        if (curatedTokens[token] == address(0) || token == SENTINEL_TOKENS) revert InvalidToken(token);
        if (value <= 0) revert InvalidValue(value);
        // Calculating the token fee for the user who wants to perform the bridge
        uint256 tokenFee = calculateFee(value);

        bytes32 messageHash = keccak256(abi.encode(
            account,
            value,
            token,
            nonce,
            block.chainid
        ));

        if(bridgedTokens[messageHash]) {
            revert VoucherAlreadyRedeemed(messageHash);
        }

        address signer = ECDSA.recover(messageHash, signature);
        if (signer != CANISTER) revert AddressMismatch(CANISTER, signer);

        uint256 amountToBridge = value - tokenFee;
        bridgeBalance[token] += tokenFee;

        bridgedTokens[messageHash] = true;

        // The rest of the coins will be bridged with a safe transfer to the recipient.
        SafeERC20.safeTransfer(ERC20(token), account, amountToBridge);

        emit BridgeIn(messageHash, token, amountToBridge, account);
    }

    /// @dev Withdraw an amount of discount tokens to be used to get fees discounts
    /// @param value The value to be withdrawn
    function withdrawDiscountToken(uint256 value) public payable {
        if (value == 0) revert InvalidTokentValue(value);

        uint256 balance = discountTokens[_msgSender()].value;
        if (value > balance) revert NotEnoughFunds(DISCOUNT_TOKEN, discountTokens[_msgSender()].value);
        if (discountTokens[_msgSender()].lock > blockTimestamp()) revert FundsLocked(discountTokens[_msgSender()].lock, blockTimestamp());

        // We update subtract the value and dont update the lock time
        discountTokens[_msgSender()].value -= value;
        SafeERC20.safeTransfer(ERC20(DISCOUNT_TOKEN), _msgSender(), value);
        emit DiscountTokenWithdrawn(_msgSender(), value);
    }

    /// @dev Deposit an amount of discount tokens to be used to get fees discounts. It will lock the funds for 180 days.
    /// @param value The value to be deposited
    function depositDiscountToken(uint256 value) public payable {
        if (value == 0) revert InvalidTokentValue(value);

        if (discountTokens[_msgSender()].lock == 0) {
            // We initialize the struct
            discountTokens[_msgSender()] = DiscountData({ value: value, lock: blockTimestamp() + LOCK_TIME });
        } else {
            // We update the lock time and accumulate the new value
            discountTokens[_msgSender()].lock = blockTimestamp() + LOCK_TIME;
            discountTokens[_msgSender()].value += value; // may have to use safe math here
        }

        SafeERC20.safeTransferFrom(ERC20(DISCOUNT_TOKEN), _msgSender(), address(this), value);
        emit DiscountTokenDeposited(_msgSender(), value);
    }

    /// @dev Withdraw the whole token balance received through fees from the bridge. The receipient is the feeReceiver
    /// @param token The token to be withdrawn
    function feeWithdraw(address token) public payable onlyRole(ADMIN_ROLE) {
        uint256 balance = bridgeBalance[token];
        if (balance == 0) revert NotEnoughFunds(token, balance);

        bridgeBalance[token] = 0;
        SafeERC20.safeTransfer(ERC20(token), feeReceiver, balance);
        emit FeeWithdrawn(token, feeReceiver, balance);
    }

    /// @dev Bridges the selected, pre-approved, token into the btc network
    /// @param token The token to be bridged
    /// @param value The amount of tokens to be bridged
    /// @param btcAddress The address that will receive the token on the btc network
    function bridgeOut(address token, uint256 value, string memory btcAddress) public payable {
        // verify if the token is supported.
        if (curatedTokens[token] == address(0)) revert InvalidToken(token);
        if (!isValidBtcAddress(btcAddress)) revert InvalidBtcAddress(btcAddress);
        if (isSenderContract()) revert InvalidContractSender(_msgSender());

        // Calculating the fee for the user who wants to perform the bridge
        uint256 tokenFee = calculateFee(value);

        uint256 amountToBridge = value - tokenFee;

        // Adding the fee to the bridge balance.
        bridgeBalance[token] += tokenFee;

        // Safely transfers bridged tokens to the bridge address.
        // This ensures an error is thrown if the operation returned false. The operation needs to be pre-approved
        SafeERC20.safeTransferFrom(ERC20(token), _msgSender(), address(this), value);
        emit BridgeOut(token, amountToBridge, btcAddress, curatedTokenData[token].tick, curatedTokenData[token].decimals);
    }

    /// @dev Allows to add a new token to the currated tokens list and emits an event
    ///      This can only be done by the admin
    /// @param token New token to be added
    /// @param tick Token tick, must match tap protocol deployment
    /// @param decimals The token decimals
    function addCuratedToken(address token, string memory tick, uint8 decimals) public onlyRole(ADMIN_ROLE) {
        _addCuratedToken(token, SENTINEL_TOKENS, tick, decimals);
        curatedTokenCount++;
        emit TokenAdded(token, tick);
    }

    /// @dev Allows to update the token metadata. Just a failsafe for human error
    /// @param token Token to be updated, must previously exist
    /// @param tick Token tick, must match tap protocol deployment
    /// @param decimals The token decimals
    function updateCuratedToken(address token, string memory tick, uint8 decimals) public onlyRole(ADMIN_ROLE) {
        if (token == address(0) || token == SENTINEL_TOKENS) revert InvalidToken(token);
        // Cant update non-existent tokens
        if (curatedTokens[token] == address(0)) revert TokenNotFound(token);
        // Invalid tick
        if (!isValidTick(tick)) revert InvalidTick(tick);

        curatedTokenData[token].tick = tick;
        curatedTokenData[token].decimals = decimals;
        emit TokenUpdated(token, tick);
    }

    /// @dev Sets the fee receiver.
    /// @param feeReceiver_ Fee receiver address.
    function setFeeReceiver(address feeReceiver_) public onlyRole(ADMIN_ROLE){
        if(feeReceiver_ == address(0)) revert InvalidReceiver(feeReceiver_);
        feeReceiver = feeReceiver_;
        emit FeeReceiverSet(feeReceiver_);
    }

    /// @dev Returns array of tokens
    /// @return Array of tokens
    function getCuratedTokens() public view returns (Token[] memory) {
        Token[] memory result = new Token[](curatedTokenCount);

        uint256 index = 0;
        address currentToken = curatedTokens[SENTINEL_TOKENS];
        while (currentToken != SENTINEL_TOKENS) {
            result[index].token = currentToken;
            result[index].tick = curatedTokenData[currentToken].tick;
            result[index].decimals = curatedTokenData[currentToken].decimals;
            currentToken = curatedTokens[currentToken];
            index++;
        }
        return result;
    }

    /// @dev Calculates fee amount for the bridging token.
    /// @param value Amount.
    /// @return Fee amount to be taken by the bridge.
    function calculateFee(uint256 value) public view returns (uint256) {
        uint256 feePercentage = DEFAULT_FEE_PERCENTAGE; 

        uint256 tokensStaked = discountTokens[_msgSender()].value;
        if(tokensStaked >= DISCOUNT_TOKEN_MAX_AMOUNT){
            feePercentage = MINIMUM_FEE_PERCENTAGE;
        }
        else if(tokensStaked >= DISCOUNT_TOKEN_MIN_AMOUNT){ 
            feePercentage -= (tokensStaked / DISCOUNT_TOKEN_MIN_AMOUNT * BASE_FEE_MODIFIER);
        }

        return value * feePercentage / BASE_PERCENTAGE;
    }

    /// @dev Setup function sets initial storage of contract
    /// @param tokens List of curated tokens
    function setupCuratedTokens(address[] memory tokens, string[] memory ticks, uint8[] memory decimals) internal {
        address currentToken = SENTINEL_TOKENS;
        for (uint256 i = 0; i < tokens.length; i++) {
            _addCuratedToken(tokens[i], currentToken, ticks[i], decimals[i]);
            currentToken = tokens[i];
        }
        curatedTokens[currentToken] = SENTINEL_TOKENS;
        curatedTokenCount = tokens.length;
    }

    /// @dev Allows to add a new token to the currated tokens list
    /// @param token New token to be added
    /// @param tick Token tick, must match tap protocol deployment
    /// @param decimals The token decimals
    function _addCuratedToken(address token, address next, string memory tick, uint8 decimals) internal {
        // required to keep the integrity of the linked list
        if (token == address(0) || token == SENTINEL_TOKENS || token == next) revert InvalidToken(token);
        // No duplicate owners allowed.
        if (curatedTokens[token] != address(0)) revert DuplicateToken(token);
        // No invalid ticks allowed.
        if (!isValidTick(tick)) revert InvalidTick(tick);

        curatedTokens[token] = curatedTokens[next];
        curatedTokens[next] = token;
        curatedTokenData[token] = TokenData(tick, decimals);
    }

    /**
     * @notice Returns true if `account` is a contract. There are multiple security reservations about doing this.
