        // Humbled copied from the beautiful people at Safe:
        //    https://github.com/safe-global/safe-smart-account/blob/main/contracts/test/ERC1155Token.sol
        uint256 size;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            size := extcodesize(account)
        }
        return size > 0;
    }

    /// @dev Verify if a given address is a valid btc address
    /// @param btcAddress The bitcoin address
    /// @return Result of the query
    function isValidBtcAddress(string memory btcAddress) internal pure returns (bool) {
        // This validation is a bit more involved so just doing a sanity check
        return bytes(btcAddress).length > 0;
    }

    /// @dev Verify if a given tick is valid according to the tap protocol
    /// @param tick The tap tick
    /// @return Result of the query
    function isValidTick(string memory tick) internal pure returns (bool) {
        // https://github.com/Trac-Systems/tap-protocol-specs
        return bytes(tick).length >= 3 && bytes(tick).length <= 32;
    }

    /// @dev Returns true if msg.sender is a contract.
    /// @return True if `msg.sender` is a contract
    function isSenderContract() private view returns (bool) {
        return isContract(_msgSender());
    }

    /// @dev Returns the block timestamp
    /// @return The timestamp
    function blockTimestamp() private view returns (uint256) {
        return block.timestamp;
    }
}