        assembly ("memory-safe") {
            tstore(0, msgsender)
        }
        (bool success,) = address(this).delegatecall(calldata_);
        if (!success) revert BadDelegatecall();
        assembly ("memory-safe") {
            tstore(0, 0)
        }
    }

