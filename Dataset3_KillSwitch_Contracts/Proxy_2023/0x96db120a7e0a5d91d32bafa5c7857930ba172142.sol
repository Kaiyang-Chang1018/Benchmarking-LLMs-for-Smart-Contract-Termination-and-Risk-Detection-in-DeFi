pragma solidity 0.8.25;


 
contract Prestaking is PrestakingRoles {
    using SafeERC20 for IERC20;
    IERC20 token;

    struct PrestakingEpoch {
        uint256 startDepositTime;
        uint256 endDepositTime;
        uint256 duration;
        uint256 maxTokens;
        uint256 basisPoints;
        uint256 releaseTime;
    }

    mapping(uint256 => PrestakingEpoch) public epochs;
    uint256 epochsCount;

    mapping(uint256 => bool) public epochDeposit;

    // Main struct for staking
    struct StakingWallet {
        address beneficiary;
        uint256 balance;
        uint256 yieldAmount;
        uint256 epochIndex;
    }

    StakingWallet[] public stakingWallets; // This could be a mapping by address, but these numbered wallets support possibility of multiple tranches per address
 
    event LogLockupDeposit(
        address sender,
        address beneficiary,
        uint256 principalAmount,
        uint256 yieldAmount,
        uint256 releaseTime,
        uint256 epochIndex
    );
    event LogLockupWithdrawal(
        address receiver,
        uint256 principalAmount,
        uint256 yieldAmount,
        uint256 epochIndex
    );

    event EpochDetail(
        address by,
        uint256 startDepositTime,
        uint256 endDepositTime,
        uint256 duration,
        uint256 maxTokens,
        uint256 basisPoints
    );

    event LogBeneficiaryUpdated(
        uint256 stakingWalletNumber,
        address oldBeneficiary,
        address newBeneficiary
    );

    constructor(address tokenContract) {
        token = IERC20(tokenContract);
    }

    function createNewEpoch(
        uint256 newStartDepositTime,
        uint256 newEndDepositTime,
        uint256 newDuration,
        uint256 newMaxTokens,
        uint256 newBasisPoints
    ) public onlyOwner {
        require(newStartDepositTime >= block.timestamp);
        require(newEndDepositTime > newStartDepositTime);
        require(newDuration <= 2 * 365 * 24 * 60 * 60);
        require(newBasisPoints <= 10000);

        PrestakingEpoch memory e;
        e.startDepositTime = newStartDepositTime;
        e.endDepositTime = newEndDepositTime;
        e.duration = newDuration;
        e.maxTokens = newMaxTokens;
        e.basisPoints = newBasisPoints;
        e.releaseTime = newEndDepositTime + newDuration;
        epochs[epochsCount] = e;
        epochsCount++;

        emit EpochDetail(
            msg.sender,
            newStartDepositTime,
            newEndDepositTime,
            newDuration,
            newMaxTokens,
            newBasisPoints
        );
    }

    function getStakingWalletBeneficiary(
        uint256 stakingWalletNumber
    ) public view returns (address) {
        require(stakingWallets.length > stakingWalletNumber);
        return stakingWallets[stakingWalletNumber].beneficiary;
    }

    function getStakingWalletsForAddress(
        address query
    ) external view returns (uint256[] memory) {
        // Get length of return array
        uint256 arrayLength = 0;
        for (uint256 i = 0; i < stakingWallets.length; ++i) {
            if (stakingWallets[i].beneficiary == query) {
                arrayLength++;
            }
        }
        uint256[] memory output = new uint256[](arrayLength);
        uint256 j = 0;
        for (uint256 i = 0; i < stakingWallets.length; ++i) {
            if (stakingWallets[i].beneficiary == query) {
                output[j] = i;
                j++;
            }
        }
        return output;
    }

    function deposit(
        address beneficiary,
        uint256 amount,
        uint256 epochIndex
    ) public {

        require(amount > 1 * 10 **18, "Deposit amount must be greater than 1.");
        
        require(epochIndex < epochsCount, "Epoch does not exist.");


        PrestakingEpoch storage currentEpoch = epochs[epochIndex];

        require(
            block.timestamp >= currentEpoch.startDepositTime,
            "Deposit time has not started yet."
        );
        require(
            block.timestamp <= currentEpoch.endDepositTime,
            "Deposit time has ended."
        );
        
        require(
            currentEpoch.maxTokens!=0,
            "Deposit exceeds max tokens for epoch."
        );

 
        // Ensure the maximum to pay in is maxTokens. Any higher amount will be
        // limited to maxTokens
        if (amount > currentEpoch.maxTokens) {
            amount = currentEpoch.maxTokens;
        }
        currentEpoch.maxTokens -= amount;

 

        // Get lockable tokens from user
        token.safeTransferFrom(msg.sender, address(this), amount);



        // Build staking wallet
        StakingWallet memory w;
        w.beneficiary = beneficiary;
        w.balance = amount;
        w.yieldAmount = (currentEpoch.basisPoints * amount) / 1e4;
        w.epochIndex = epochIndex;
        // w.releaseTime = block.timestamp + currentEpoch.duration;
        stakingWallets.push(w);
 
        epochDeposit[epochIndex] = true;
        epochs[epochIndex] =currentEpoch;



        emit LogLockupDeposit(
            msg.sender,
            w.beneficiary,
            w.balance,
            w.yieldAmount,
            currentEpoch.releaseTime,
            epochIndex
        );
 
    }

    // Beneficiaries can update the receiver wallet, TODO can we lock after blocknumber
    function updateBeneficiary(
        uint256 stakingWalletNumber,
        address newBeneficiary
    ) public {
        require(stakingWallets.length >= stakingWalletNumber);

        require(
            newBeneficiary != address(0),
            "Beneficiary cannot be zero address."
        );
        StakingWallet storage w = stakingWallets[stakingWalletNumber];
        require(w.balance > 0);
        require(msg.sender == w.beneficiary);
        emit LogBeneficiaryUpdated(
            stakingWalletNumber,
            w.beneficiary,
            newBeneficiary
        );
        w.beneficiary = newBeneficiary;
    }

    function withdrawPrincipal(uint256 stakingWalletNumber) public {
        require(stakingWallets.length >= stakingWalletNumber);
        StakingWallet storage w = stakingWallets[stakingWalletNumber];
        require(w.balance > 0);
        require(epochs[w.epochIndex].releaseTime <= block.timestamp);
        uint256 amount = w.balance;
        w.balance = 0;
        emit LogLockupWithdrawal(
            w.beneficiary,
            amount,
            w.yieldAmount,
            w.epochIndex
        );
        w.yieldAmount = 0;
        token.safeTransfer(w.beneficiary, amount);
    }

    // Admin update functions
    function updateEndDepositTime(
        uint256 newEndTime,
        uint256 epochIndex
    ) public onlyOwner {
        require(
            epochDeposit[epochIndex] != true,
            "Deposit has already been made for this epoch."
        );
        require(newEndTime > epochs[epochIndex].startDepositTime);
 
        epochs[epochIndex].endDepositTime = newEndTime;
        epochs[epochIndex].releaseTime =
            newEndTime +
            epochs[epochIndex].duration;
        emit EpochDetail(
            msg.sender,
            epochs[epochIndex].startDepositTime,
            newEndTime,
            epochs[epochIndex].duration,
            epochs[epochIndex].maxTokens,
            epochs[epochIndex].basisPoints
        );
    }
}