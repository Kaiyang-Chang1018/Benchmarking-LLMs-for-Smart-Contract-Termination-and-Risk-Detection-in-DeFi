    error PhoenixAuction__LiquidityAlreadyAdded();
    error PhoenixAuction__NotStartedYet();
    error PhoenixAuction__NothingToClaim();
    error PhoenixAuction__AuctionEnded();
    error PhoenixAuction__NothingToEmit();

